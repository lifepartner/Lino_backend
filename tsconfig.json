{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/@types/**/*.ts", "./src/@types/**/*.d.ts", "./src/**/*"],
  "exclude": ["node_modules"]
}
